@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin" }))
{
        <form >
            <h1 class="text-center">Unesite podatke</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email" required="" autofocus="">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="">
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Sacuvaj me 
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Prijava</button>
            <p class="text-center">© 2017-2019</p>
        </form>
}




